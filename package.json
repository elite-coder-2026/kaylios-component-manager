{
  "name": "kaylios-component-manager",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "component:add": "node scripts/add-component.mjs",
    "build:bundle": "esbuild client/js/editor-src.js --bundle --minify --sourcemap --platform=browser --format=iife --charset=ascii --target=es2017 --outfile=client/js/editor.es2017.js",
    "build:transpile": "babel client/js/editor.es2017.js --out-file client/js/editor.js --source-maps",
    "build": "npm run build:bundle && npm run build:transpile"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.29.0",
    "@babel/plugin-transform-unicode-property-regex": "^7.28.6",
    "@babel/preset-env": "^7.29.0",
    "esbuild": "^0.25.0"
  },
  "dependencies": {
    "@codemirror/commands": "^6.5.0",
    "@codemirror/lang-css": "^6.3.0",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.26.3"
  }
}
